    "react-dom": "^18.0.0 || ^19.0.0",
    "react-icons": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@gsap/react": {
      "optional": true
    },
    "gsap": {
      "optional": true
    },
    "react-icons": {
      "optional": true
    }
